{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "prebuild": "yarn clean",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build:prod": "tsc",
    "clean": "rm -rf lib && mkdir lib",
    "serve:local": "node --require dotenv/config dist/server.js",
    "start:local": "NODE_ENV=production yarn build && yarn serve:local",
    "start:dev": "nodemon --require dotenv/config --config nodemon.json src/app/server.ts",
    "lint:fix": "yarn lint --fix",
    "test": "NODE_ENV=test jest --no-cache  --detectOpenHandles --runInBand --forceExit"
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "cors": "^2.8.5",
    "debug": "^4.2.0",
    "dotenv": "^8.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.11.0",
    "jest": "^26.6.3",
    "morgan": "~1.9.0",
    "nodemon": "^1.18.11",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^8.3.2",
    "validate.js": "^0.13.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.2.2",
    "@types/cors": "^2.8.7",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "nodemon": "^1.18.11",
    "source-map-support": "^0.5.16",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.0.0",
    "typescript": "^4.1.5"
  },
  "main": "lib/index.js"
}
